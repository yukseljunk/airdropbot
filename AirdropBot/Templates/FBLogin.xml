<?xml version="1.0"?>
<steps>
  <navigate url="about:blank"/>
  <clearcookies/>
  <navigate url="http://www.facebook.com/login" />
  <wait for="2"/>
  <snap xpath="//*[@id='email']" x="%50" y="%150"/>
  <sendkey value="${0}"/>

  <wait for="${Random(1,3)}"/>
  <snap xpath="//*[@id='pass']" x="%50" y="%150"/>
  <sendkey value="${1}"/>
  <wait for="${Random(1,3)}"/>
  <snap xpath="//*[@id='loginbutton']" x="%50" y="%150"/>

  <wait for="${Random(3,5)}"/>
</steps>